{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {},
    "types": ["node"],
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
