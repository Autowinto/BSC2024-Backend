{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": [
      "node",
      "vitest/globals",
      "vite/"
    ],
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "build",
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./documentation/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "build/**/*"
  ]
}