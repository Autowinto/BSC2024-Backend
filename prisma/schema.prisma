// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// A Meter is the physical Meters in the office that Energinet shows in their API
model PowerReadingArea {
  id         Int         @id @default(autoincrement())
  externalId Int         @unique
  name       String
  smartPlugs SmartPlug[]
}

model Device {
  id              Int        @id @default(autoincrement())
  name            String
  expectedWattage Float?
  smartPlug       SmartPlug? @relation(fields: [smartPlugId], references: [id])
  smartPlugId     String?
}

model SmartPlug {
  id                   String                 @id
  name                 String
  meter                PowerReadingArea       @relation(fields: [meterId], references: [id])
  meterId              Int
  smartPlugMeasurement SmartPlugMeasurement[]
  appliances           Device[]
}

model SmartPlugMeasurement {
  id           Int       @id @default(autoincrement())
  wattage      Decimal
  timeMeasured DateTime
  smartPlug    SmartPlug @relation(fields: [smartPlugId], references: [id])
  smartPlugId  String
}
