{
  "name": "backend",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel watch test",
    "watch": "tsx watch ./src/server.ts",
    "test": "vitest --isolate=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc && resolve-tspaths",
    "start": "node --experimental-specifier-resolution=node ./build/server.js",
    "db:reset": "dotenv -e .env.prisma -- prisma migrate reset --force && prisma generate",
    "db:deploy": "prisma migrate deploy && prisma generate",
    "db:migrate": "dotenv -e .env.prisma -- prisma migrate dev",
    "db:seed": "ts-node-dev prisma/seed.ts"
  },
  "overrides": {
    "pnpm": {
      "overrides": {
        "rollup": "npm:@rollup/wasm-node"
      }
    }
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/passport": "^2.4.0",
    "@fastify/session": "^10.7.0",
    "@fastify/static": "^7.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^5.9.1",
    "@scalar/fastify-api-reference": "^1.19.1",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.7",
    "concurrently": "^8.2.2",
    "fastify": "^4.26.0",
    "fastify-swagger": "^5.2.0",
    "fluent-json-schema": "^4.2.1",
    "fs": "0.0.1-security",
    "passport-custom": "^1.1.1",
    "pg": "^8.11.3",
    "prisma": "^5.9.1",
    "swagger": "^0.7.5",
    "swagger-jsdoc": "^6.2.8",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/passport": "^1.0.16",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "concurrency": "^0.1.4",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "resolve-tspaths": "^0.8.18",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.5",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  }
